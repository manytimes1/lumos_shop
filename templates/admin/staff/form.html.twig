<div class="collapse" id="addNewStaff">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New Staff</h4>
            <form action="{{ url('add_new_staff') }}" method="post">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    {{ form_row(form.profile.firstName) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    {{ form_row(form.profile.lastName) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Username</label>
                                    {{ form_row(form.username) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Password</label>
                                    {{ form_row(form.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Phone</label>
                                    {{ form_row(form.profile.phone) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Location</label>
                                    {{ form_row(form.profile.location) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Role</label>
                                    {{ form_row(form.roles) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_row(form._token) }}
                <button type="submit" class="btn btn-info btn btn-info waves-effect waves-light float-right">Add</button>
            </form>
        </div>
    </div>
</div>