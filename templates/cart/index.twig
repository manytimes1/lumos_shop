{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body">
                <h3 class="text-center">MY CART</h3>
                <hr/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive" style="clear: both">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Model</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td><img src="{{ product.image }}" alt="product" width="40px" height="40px"></td>
                                        <td>{{ product.name }}</td>
                                        <td>{{ product.model }}</td>
                                        <td>{{ product.quantity }}</td>
                                        <td>{{ product.price|number_format(2, '.', ',') }}</td>
                                        <td>{{ product.totalPrice|number_format(2, '.', ',') }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="float-right mt-4 text-right">
                            <h3>
                                <b>Total: </b> {{ total|number_format(2, '.', ',') }}
                            </h3>
                        </div>
                        <div class="clearfix"></div>
                        <hr/>
                        <div class="text-right">
                            <button type="submit" class="btn btn-danger">Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}