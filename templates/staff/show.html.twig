{% extends 'base.html.twig' %}

{% block main %}
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor mb-0 mt-0">Staff Detail</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('staff_list') }}">Staff</a></li>
                <li class="breadcrumb-item active">Basic</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-xlg-3 col-md-5">
            <div class="card">
                <div class="card-body">
                    <center class="mt-4"> <img src="{{ employee.profile.picture }}" class="img-circle" width="150" />
                        <h4 class="card-title mt-2">{{ employee.profile }}</h4>
                        {% if employee.enabled %}
                            <span class="label label-success m-r-5">Activated</span>
                        {% else %}
                            <span class="label label-danger m-r-5">Banned</span>
                        {% endif %}
                    </center>
                </div>
                <div>
                    <hr></div>
                <div class="card-body"> <small class="text-muted">Email address</small>
                    <h6>{{ employee.email }}</h6> <small class="text-muted p-t-30">Username</small>
                    <h6>{{ employee.username }}</h6> <small class="text-muted p-t-30">Location</small>
                    <h6>{{ employee.profile.location }}</h6><small class="text-muted">Created at</small>
                    <h6>{{ employee.createdAt|date('d-m-Y') }}</h6>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-8 col-md-8">
            <div class="card card-body">
                <div class="row">
                    <div class="col-3 col-lg-3 col-md-3">
                        <div class="list-group">
                            <a href="{{ url('staff_detail', {id: employee.id} ) }}" class="active list-group-item">Basic</a>
                        </div>
                    </div>
                    <div class="col-9 col-lg-9 col-md-9">
                        {{ include('staff/update.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}