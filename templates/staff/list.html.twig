{% extends 'base.html.twig' %}

{% block main %}
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor mb-0 mt-0">Staff</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
                <li class="breadcrumb-item active">Staff</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ include('staff/create.html.twig') }}
            <div class="card">
                <div class="card-body">
                    <button class="btn btn-info btn-sm float-right" type="button" data-toggle="collapse"
                            data-target="#addNew">Create</button>
                    <h4 class="card-title">Staff List</h4>
                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Created at</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>{{ employee.profile }}</td>
                                    <td>{{ employee.email }}</td>
                                    <td>{{ employee.roles|join('') }}</td>
                                    {% if employee.enabled == 1 %}
                                        <td><span class="label label-success m-r-5">Active</span></td>
                                    {% else %}
                                        <td>Inactive</td>
                                    {% endif %}
                                    <td>{{ employee.createdAt|date('d-m-Y') }}</td>
                                    <td>
                                        <div class="button-group">
                                            <a href="{{ path('staff_detail', {'id': employee.id}) }}"
                                               class="btn waves-effect waves-light btn-info">
                                                View
                                            </a>

                                            {{ include('staff/delete.html.twig') }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}