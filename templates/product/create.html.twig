{% extends 'base.html.twig' %}

{% block main %}
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor mb-0 mt-0">Product</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Product</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add new product</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.name) }}
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.model) }}
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12">
                                        <div class="form-group">
                                            {{ form_row(form.category) }}
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.quantity) }}
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.image) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.price) }}
                            </div>
                        </div>
                        {{ form_row(form._token) }}

                        <div class="float-right">
                            <a href="{{ path('product_index') }}" class="btn btn-danger waves-effect waves-light">Cancel</a>
                            <button class="btn btn-success waves-effect waves-light" type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}