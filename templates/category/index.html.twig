{% extends 'base.html.twig' %}

{% block main %}
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor mb-0 mt-0">Category</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
                <li class="breadcrumb-item active">Category</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-10 col-lg-10 col-md-10">
                            <div class="row">
                                <div class="col-12 col-sm-4 col-md-4">
                                    <h4 class="card-title">Add New Category</h4>
                                    {{ include('category/form.html.twig') }}
                                </div>
                                <div class="col-12 col-sm-8 col-md-8">
                                    <h4 class="card-title">Category List</h4>
                                    <div class="table-responsive">
                                        <table class="table display table-bordered table-striped no-wrap">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Description</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for category in categories %}
                                                    <tr>
                                                        <td>{{ category.name }}</td>
                                                        <td>{{ category.description }}</td>
                                                        <td>
                                                            <div class="button-group">
                                                                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn waves-effect waves-light btn-warning">
                                                                    Edit
                                                                </a>
                                                                {% if app.user.isAdmin() %}
                                                                    {{ include('category/delete.html.twig') }}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}