{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material" method="post">
            <h3 class="box-title mb-3 text-center">Register</h3>
            <div class="col-xs-12">
                {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'}}) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.profile.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.profile.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
            </div>
                {{ form_row(form._token) }}
            <div class="form-group text-center mt-3">
                <div class="col-xs-12">
                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Sign Up</button>
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}